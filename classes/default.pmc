    STRING* name () {
        return SELF->vtable->whoami;
    }

/*

=item C<PMC *find_method(STRING *method_name)>

Looks up the method for C<*method_name> and returns it. If no method is
found then C<NULL> is returned.

=cut

*/

    PMC* find_method(STRING* method_name) {
        PMC *meth_hash;
        int type = SELF->vtable->base_type;

        if (type >= (int)INTERP->nci_method_table_size)
            return NULL;

        meth_hash = INTERP->nci_method_table[type];
        if (!meth_hash)
            return NULL;
        return VTABLE_get_pmc_keyed_str(INTERP, meth_hash, method_name);
    }

