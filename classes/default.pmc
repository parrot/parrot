    INTVAL can (STRING* method) {
        PMC *meth_hash;
        int type = SELF->vtable->base_type;

        if (type >= (int)INTERP->nci_method_table_size)
            return 0;

        meth_hash = INTERP->nci_method_table[type];
        if (!meth_hash)
            return 0;
        return VTABLE_exists_keyed_str(INTERP, meth_hash, method);
    }

