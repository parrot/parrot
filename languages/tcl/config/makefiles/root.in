 $(C_BUILTIN)/llength.pir \
 $(C_BUILTIN)/pwd.pir \
 $(C_BUILTIN)/time.pir \
 $(C_BUILTIN)/while.pir

DEPS = \
$(R_BUILTIN)/after.pir \
$(R_BUILTIN)/append.pir \
$(R_BUILTIN)/array.pir \
$(C_BUILTIN)/auto_execok.pir \
$(C_BUILTIN)/auto_load.pir \
$(R_BUILTIN)/binary.pir \
$(R_BUILTIN)/catch.pir \
$(C_BUILTIN)/cd.pir \
$(C_BUILTIN)/close.pir \
$(R_BUILTIN)/concat.pir \
$(C_BUILTIN)/continue.pir \
$(R_BUILTIN)/error.pir \
$(R_BUILTIN)/eval.pir \
$(C_BUILTIN)/exec.pir \
$(R_BUILTIN)/expr.pir \
$(C_BUILTIN)/fconfigure.pir \
$(R_BUILTIN)/file.pir \
$(C_BUILTIN)/flush.pir \
$(R_BUILTIN)/foreach.pir \
$(R_BUILTIN)/format.pir \
$(R_BUILTIN)/gets.pir \
$(C_BUILTIN)/glob.pir \
$(R_BUILTIN)/global.pir \
$(R_BUILTIN)/if.pir \
$(R_BUILTIN)/info.pir \
$(R_BUILTIN)/inline.pir \
$(C_BUILTIN)/interp.pir \
