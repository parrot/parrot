$(R_BUILTIN)/lassign.pir \
$(R_BUILTIN)/lindex.pir \
$(R_BUILTIN)/linsert.pir \
$(R_BUILTIN)/list.pir \
$(R_BUILTIN)/lrange.pir \
$(R_BUILTIN)/lrepeat.pir \
$(C_BUILTIN)/lsearch.pir \
$(R_BUILTIN)/lset.pir \
$(R_BUILTIN)/lsort.pir \
$(R_BUILTIN)/namespace.pir \
