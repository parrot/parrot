    $S7 = $I0
    ${INS} = concat $S7
    ${INS} = concat "\n  clone ${REG}"
    $S1 = ${A}
    ${INS} = concat $S1
    ${INS} = concat ", ${REG}"
    ${INS} = concat $S2
    ${INS} = concat "\n"
PIR
    },

## Loop Instructions

    FORLOOP => {
        code => 31,
        format => 'AsBx',
        synopsis => 'R(A) += R(A+2); if (R(A) <?= R(A+1)) then { PC += sBx; R(A+3) := R(A) }',
        pir => <<'PIR',
    ${INS} = concat "  add ${REG}"
    $S1 = ${A}
    ${INS} = concat $S1
    ${INS} = concat ", ${REG}"
    $I0 = ${A} + 2
    $S5 = $I0
    ${INS} = concat $S5
    ${INS} = concat "\n  ${NTEMP}0 = ${REG}"
    ${INS} = concat $S5
    ${INS} = concat "\n  le ${NTEMP}0, 0.0, PC"
    $S8 = ${PC}
    ${INS} = concat $S8
    ${INS} = concat "_or\n  gt ${REG}"
    ${INS} = concat $S1
    ${INS} = concat ", ${REG}"
    $I0 = ${A} + 1
    $S4 = $I0
    ${INS} = concat $S4
    ${INS} = concat ", PC"
    $S7 = ${NEXTPC}
    ${INS} = concat $S7
    ${INS} = concat "\n  goto PC"
    ${INS} = concat $S8
    ${INS} = concat "_blk\nPC"
    ${INS} = concat $S0
    ${INS} = concat "_or:\n  lt ${REG}"
    ${INS} = concat $S1
    ${INS} = concat ", ${REG}"
    ${INS} = concat $S4
    ${INS} = concat ", PC"
    ${INS} = concat $S7
    ${INS} = concat "\nPC"
    ${INS} = concat $S8
    ${INS} = concat "_blk:\n  clone ${REG}"
    $I0 = ${A} + 3
    $S6 = $I0
    ${INS} = concat $S6
    ${INS} = concat ", ${REG}"
    ${INS} = concat $S1
    ${INS} = concat "\n  goto PC"
    $I0 = ${NEXTPC} + ${B}
    $S7 = $I0
    ${INS} = concat $S7
    ${INS} = concat "\n"
PIR
    },

    FORPREP => {
        code => 32,
        format => 'AsBx',
        synopsis => 'R(A) -= R(A+2); PC += sBx',
        pir => <<'PIR',
    $I0 = ${A}
    ${INS} = concat "  (${REG}"
    $S0 = $I0
    ${INS} = concat $S0
    ${INS} = concat ", ${REG}"
    inc $I0
    $S0 = $I0
    ${INS} = concat $S0
    ${INS} = concat ", ${REG}"
    inc $I0
    $S0 = $I0
    ${INS} = concat $S0
    $I0 = ${A}
    ${INS} = concat ") = checkforloop(${REG}"
    $S0 = $I0
    ${INS} = concat $S0
    ${INS} = concat ", ${REG}"
    inc $I0
    $S0 = $I0
    ${INS} = concat $S0
    ${INS} = concat ", ${REG}"
    inc $I0
    $S0 = $I0
    ${INS} = concat $S0
    ${INS} = concat ")\n  sub ${REG}"
    $S1 = ${A}
    ${INS} = concat $S1
    ${INS} = concat ", ${REG}"
    $I0 = ${A} + 2
    $S5 = $I0
    ${INS} = concat $S5
    ${INS} = concat "\n  goto PC"
    $I0 = ${NEXTPC} + ${B}
    $S7 = $I0
    ${INS} = concat $S7
    ${INS} = concat "\n"
PIR
    },

    TFORLOOP => {
        code => 33,
        format => 'AC',
        synopsis => 'R(A+3), ... , R(A+2+C) := R(A)(R(A+1), R(A+2)); if (R(A+3) ~= nil) then R(A+2) := R(A+3) else PC++',
        pir => <<'PIR',
    $I0 = ${A} + 3
    $I1 = ${C}
  ${LABEL}_1:
    unless $I1 goto ${LABEL}_2
    ${INS} = concat "  new ${REG}"
    $S0 = $I0
    ${INS} = concat $S0
    ${INS} = concat ", 'LuaNil'\n"
    inc $I0
    dec $I1
    goto ${LABEL}_1
  ${LABEL}_2:
    ${INS} = concat "  ("
    $I0 = ${A} + 3
    $I1 = ${C}
    $I2 = 1
  ${LABEL}_3:
    unless $I1 goto ${LABEL}_4
    if $I2 goto ${LABEL}_5
    ${INS} = concat ", "
  ${LABEL}_5:
    $I2 = 0
    ${INS} = concat "${REG}"
    $S0 = $I0
    ${INS} = concat $S0
    inc $I0
    dec $I1
    goto ${LABEL}_3
  ${LABEL}_4:
    ${INS} = concat ") = ${REG}"
    $I0 = ${A}
    $S1 = $I0
    ${INS} = concat $S1
    ${INS} = concat "(${REG}"
    inc $I0
    $S0 = $I0
    ${INS} = concat $S0
    ${INS} = concat ", ${REG}"
    inc $I0
    $S0 = $I0
    ${INS} = concat $S0
    ${INS} = concat ")\n  isa ${ITEMP}0, ${REG}"
    $I0 = ${A} + 3
    $S6 = $I0
    ${INS} = concat $S6
    ${INS} = concat ", 'LuaNil'\n  if ${ITEMP}0 goto PC"
    $I0 = ${NEXTPC} + 1
    $S7 = $I0
    ${INS} = concat $S7
    ${INS} = concat "\n  clone ${REG}"
    $I0 = ${A} + 2
    $S5 = $I0
    ${INS} = concat $S5
    ${INS} = concat ", ${REG}"
    ${INS} = concat $S6
    ${INS} = concat "\n"
PIR
    },

## Table Creation

    NEWTABLE => {
        code => 10,
        format => 'ABC',
        synopsis => 'R(A) := {}',
        pir => <<'PIR',
    ${INS} = concat "  new ${REG}"
    $S1 = ${A}
    ${INS} = concat $S1
    ${INS} = concat ", 'LuaTable'\n"
PIR
    },

    SETLIST => {
        code => 34,
        format => 'ABC',
        synopsis => 'R(A)[(C-1)*FPF+i] := R(A+i), 1 <= i <= B',
        pir => <<'PIR',
    ${INS} = concat "  box ${PTEMP}0, "
    $I0 = ${C} - 1
    $I0 *= ${FPF}
    inc $I0
    $S3 = $I0
    ${INS} = concat $S3
    ${INS} = concat "\n"
    $I0 = 1
    unless ${B} goto ${LABEL}_1
    $I1 = ${B}
    goto ${LABEL}_2
  ${LABEL}_1:
    $I1 = ${STACK} - ${A}
    dec $I1
  ${LABEL}_2:
    unless $I0 <= $I1 goto ${LABEL}_3
    ${INS} = concat "  ${REG}"
    $S1 = ${A}
    ${INS} = concat $S1
    ${INS} = concat "[${PTEMP}0] = ${REG}"
    $I2 = ${A} + $I0
    $S0 = $I2
    ${INS} = concat $S0
    ${INS} = concat "\n  inc ${PTEMP}0\n"
    inc $I0
    goto ${LABEL}_2
  ${LABEL}_3:
    if ${B} goto ${LABEL}_4
    ${INS} = concat "  tconstruct(${REG}"
    $S1 = ${A}
    ${INS} = concat $S1
    ${INS} = concat ", ${PTEMP}0, ${REG}"
    $S9 = ${STACK}
    ${INS} = concat $S9
    ${INS} = concat " :flat)\n"
  ${LABEL}_4:
PIR
    },

## Closures and Closing

    CLOSE => {
        code => 35,
        format => 'A',
        synopsis => 'close all variables in the stack up to R(A)',
        pir => <<'PIR',
    ${INS} = concat "  # nothing\n"
PIR
    },

    CLOSURE => {
        code => 36,
        format => 'ABx',
        synopsis => 'R(A) := closure(KPROTO[Bx], R(A), ... , R(A+n))',
        pir => <<'PIR',
    ${INS} = concat "  .const 'Sub' ${PROTO}"
    $S2 = ${B}
    ${INS} = concat $S2
    ${INS} = concat " = '"
    ${INS} = concat ${FNAME}
    ${INS} = concat "_"
    ${INS} = concat $S2
    ${INS} = concat "'\n  newclosure ${REG}"
    $S1 = ${A}
    ${INS} = concat $S1
    ${INS} = concat ", ${PROTO}"
    ${INS} = concat $S2
    ${INS} = concat "\n  ${GLOB} = ${SUBR}.'getfenv'()\n"
    ${INS} = concat "  ${REG}"
    ${INS} = concat $S1
    ${INS} = concat ".'setfenv'(${GLOB})\n"
    $P0 = getattribute func, 'p'
    ${CLOSURE} = $P0[${B}]
    $P0 = getattribute ${CLOSURE}, 'nups'
    ${NUPS} = $P0
    ${UPVAL} = 0
PIR
    },
};

$opcodes->{SUB}->{pir} = substitute($opcodes->{ADD}->{pir}, 'add' => 'sub');
$opcodes->{MUL}->{pir} = substitute($opcodes->{ADD}->{pir}, 'add' => 'mul');
$opcodes->{DIV}->{pir} = substitute($opcodes->{ADD}->{pir}, 'add' => 'div');
$opcodes->{MOD}->{pir} = substitute($opcodes->{ADD}->{pir}, 'add' => 'mod');
$opcodes->{POW}->{pir} = substitute($opcodes->{ADD}->{pir}, 'add' => 'pow');

$opcodes->{NOT}->{pir} = substitute($opcodes->{UNM}->{pir}, 'neg' => 'not');

$opcodes->{LT}->{pir}  = substitute($opcodes->{EQ}->{pir},  'eq'  => 'lt',
                                                            'ne'  => 'ge');
$opcodes->{LE}->{pir}  = substitute($opcodes->{EQ}->{pir},  'eq'  => 'le',
                                                            'ne'  => 'gt');

return $opcodes;

