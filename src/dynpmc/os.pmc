#if defined(_MSC_VER)
#  include <direct.h>
#  include <io.h>
#  include <tchar.h>
#  include <windows.h>
#elif defined(__BORLANDC__)
#  include <dir.h>
#  include <dirent.h>
#else
#  include <dirent.h>
