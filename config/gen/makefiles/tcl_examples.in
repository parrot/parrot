PARROT = .${slash}parrot${exe}
UP_PATH = ..${slash}..${slash}..${slash}
DOWN_PATH = languages${slash}tcl${slash}

default:
	@echo "to run <foo>.tcl, type 'make <foo>'"

%:%.tcl
	cd $(UP_PATH) && $(PARROT) $(DOWN_PATH)tcl.pbc $(DOWN_PATH)examples${slash}$@.tcl

# (for development testing)
test:
	cd $(UP_PATH) && $(PARROT) -t $(DOWN_PATH)tcl.pbc $(DOWN_PATH)examples${slash}foo.tcl
