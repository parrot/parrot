#include <stdio.h>
#include <stdlib.h>
#include <gmp.h>

int main(int argc, char *argv[])
{
    mpz_t i, j, k;
    char *s; int y;

    mpz_init(i);
    mpz_set_si(i, 999999);
    mpz_init(j);
    mpz_set_si(j, 1000000);
    mpz_init(k);
    mpz_mul(k, i, j);
    mpz_set_si(i, 2);
    mpz_div(k, k, i);

    y = mpz_fits_slong_p(k);

    s = mpz_get_str(NULL, 10, k);
    printf("%s %d\n", s, y);
    free(s);
    return 0;
}
